<html>
    <head>
        <link href="../css/custom.css" rel='stylesheet' type="text/css">
        <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Task Categories</title>
    </head>
    <body class="withcover">
        <div class="container">
            {% if task is not null and flag != false %}
                <h2> Category list for {{ task.getName }}</h2>
                <a href="/task/{{ task.getId }}/update">Edit/Delete task</a>
                    {% if categories is not empty and flag != false %}
                        <h2>Click on a category to edit/delete</h2>
                        <ul>
                            {% for category in categories %}
                            <li><a href="/task/{{ task.getId }}/update">{{ category.getName }}</a></li>
                            {% endfor %}
                        </ul>
                    {% elseif categories is empty and flag != false %}
                        <h3>No categories</h3>
                    {% endif %}
            {% elseif flag == false%}
                <h3>New Task!</h3>
                <h3>Assign more categories to {{ task.getName }}:</h3>
                <form action="/category_insert" method="post">
                    <input type="hidden" name="task_id" id="task_id" value="{{ task.getId() }}">
                    <label for='name'>Category Name</label>
                    <input id='name' name='name' type='text'>
                    <button type='submit'>Add category</button>
                </form>
            {% else %}
                <a href="/">No Task to view. Go Home</a>
            {% endif %}
            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
